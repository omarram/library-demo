<%= form_for @book, html: { multipart: true } do |f| %>
  <% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :isbn %><br>
      <%= f.text_field :isbn, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-8">
      <%= f.label :description %><br>
      <%= f.text_area :description, class: "form-control", rows: 8 %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :publisher %><br>
      <%= f.text_field :publisher, class: "form-control" %>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-2">
      <%= f.label :published_on %><br>
      <div class="input-group date">
        <%= f.text_field :published_on, class: "form-control" %>
        <span class="input-group-addon"><i class="glyphicon glyphicon-th"></i></span>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :image %><br>
      <%= f.file_field :image, class: "form-control" %>
    </div>
  </div>

  <div class="row">
    <div class="form-group col-sm-4">
      <%= f.label :author_ids, 'Select Authors' %>
      <%= f.select :author_ids, Author.all.collect {|a| [a.name, a.id]}, {}, { multiple: true, class: 'taggable' } %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
